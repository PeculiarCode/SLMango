.audio-view {
  color: #000;
  font-size: 28rpx;
}
.audio-view .song {
  display: flex;
  align-items: center;
  background: #fff;
  position: relative;
  width: 90%;
  margin: 0 auto;
}
.audio-view .song .operate {
  position: relative;
}
.audio-view .song .operate .play-icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  transform: translate(-50%, -50%);
  top: 50%;
  left: 50%;
}
.audio-view .song .operate .poster {
  width: 200rpx;
}
.audio-view .song .tips {
  margin-left: 20rpx;
}
.audio-view .song .tips .author {
  margin-top: 10rpx;
  color: #9e9e9e;
}
.audio-view .song .tips .name {
  font-size: 30rpx;
}
.audio-view .song .end-time {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.audio-view .song .process {
  width: 400rpx;
}
